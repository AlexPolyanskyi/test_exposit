<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="225dip">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_radius">
        <RelativeLayout
            android:padding="8dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/date_weather"
                android:padding = "3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"/>
            <View
                android:id="@+id/divider"
                android:padding="3dip"
                android:layout_below="@id/date_weather"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorAccent"/>
            <ImageView
                android:id="@+id/weather_item_image"
                android:layout_below="@id/divider"
                android:layout_width="70dip"
                android:layout_height="70dip"/>
            <TextView
                android:id="@+id/temperature_item"
                android:layout_below="@id/divider"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:textSize="18sp"
                android:gravity="bottom"
                android:layout_toRightOf="@id/weather_item_image" />
            <TextView
                android:id="@+id/weather_item"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:textSize="16sp"
                android:gravity="top"
                android:layout_below="@id/temperature_item"
                android:layout_toRightOf="@id/weather_item_image"/>
            <LinearLayout
                android:id="@+id/other_item"
                android:layout_below="@id/weather_item_image"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/cloudiness_item"
                    android:layout_width="match_parent"
                    android:layout_height="25dip"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/humidity_item"
                    android:layout_width="match_parent"
                    android:layout_height="25dip"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/pressure_item"
                    android:layout_width="match_parent"
                    android:layout_height="25dip"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/wind_speed_item"
                    android:layout_width="match_parent"
                    android:layout_height="25dip"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>